<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Custom.Dark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/secondary_text_dark</item>
        <item name="colorPrimaryDark">@android:color/secondary_text_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Custom.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@android:color/background_light</item>
        <item name="android:colorBackground">@color/backgroundDark</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="Theme.Custom.Dark.2" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary_material_dark_1</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
    </style>

</resources>
